<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body>
    <%- include('partials/header') %>
    <div class="container">
        <section class="listadoProductos">
            <div class="row productos">
                <div class="titulo col-12">
                    <h2>
                        <%= title %>
                    </h2>
                </div>
                <% productos.forEach(producto => { %>
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="contenido">
                            <!-- <figure>
                                <a href="/products/productDetail/<%= producto.id %> "><img src="/images/<%= producto.imagen %>" width="100%" height="100%" alt=" " >
                                </a>
                            </figure> -->
                            <div class="imagen-prod">
                                <a href="/products/productDetail/<%- producto.id %> ">
                                    <img
                                    src="/images/<%= producto.imagen %>  "
                                    alt=""
                                    />
                                </a>
                            </div>
                            
                            <article>
                                <!--  <h2>
                                    $ <%- (producto.precio) %>
                                </h2>
                                <p>
                                    <%- producto.nombre %>
                                </p> -->
                                
                                <h3>$ <%= producto.precio %> </h3>
                                <p> <%= producto.nombre %> </p>
                                <a href=""
                                ><i
                                class="fa fa-shopping-cart"
                                style="color: #00afef;"
                                aria-hidden="true"
                                ></i>
                            </a>
                            
                        </article>
                    </div>
                </div>
                <% }) %>
            </div>
        </section>
    </div>
    <%- include('partials/footer') %>
</body>

</html>