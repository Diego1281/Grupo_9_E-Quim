<!DOCTYPE html>
<html lang="es">

<%- include('partials/head') %> 
<body>
  <!--EMPIEZA EL HEADER-->

<%- include('partials/header') %> 

  <!--EMPIEZA EL FORMULARIO DE CARGA DE PRODUCTOS-->
  <section class="container-fluid">
    <div class="row">
      <div class="col-12">
        <h2>Nuevo producto</h2>
      </div>
      <div class="col-12">
        <article>
          <form class="col-12 col-md-12" action="/products/agregarProducto" method="post">
            <div class= "form-group">
              <label for="name">Nombre:</label>
              <input type="text" name="nombre">
            </div>
            <div class= "form-group">
              <label for="category">Categoria:</label>
              <input type="text" name="categoria">
            </div>
            <div class= "form-group">
              <label for="price">Precio:</label>
              <input type="text" name="precio">
            </div>
            <div class= "form-group">
              <label for="decription">Descripcion:</label>
              
            </div>
            <textarea cols="" rows=""></textarea>
            <div class="form-row">
              <div class="form-group col-12 col-xl-6">
              </div> 
                <div class="custom-file">
                    <input type="file" class="custom-file-input " id="imagen" lang="en" name="imagen">
                    <label class="custom-file-label" for="customFileLang">Seleccione Imagenes</label>
                    <small id="errorImagen" class="text-danger"><%= (typeof errors != 'undefined' && errors.imagen)?errors.imagen.msg: "" %> </small>
                  
                </div>
            <div class= "form-group">
              <button type="submit">AGREGAR NUEVO PRODUCTO</button>
              <button type="reset">LIMPIAR CAMPOS</button>
            </div>
          </form>
        </article>
      </div>
    <!--TERMINA EL FORMULARIO-->
  </section>
  <!--TERMINA EL FORMLARIO DE CARGA DE PRODUCTOS-->

  <!--EMPIEZA EL FOOTER-->
<%- include('partials/footer') %> 

</body>
</html>